class Vehicle:
    def __init__(self, name, max_speed, mileage):
        self.name = name
        self.max_speed = max_speed
        self.mileage = mileage
    def display_info(self):
        return f"Vehicle Name: {self.name}, Speed: {self.max_speed}, Mileage: {self.mileage}"
class Bus(Vehicle):
    def display_info(self):
        return f"Bus Name: {self.name}, Speed: {self.max_speed}, Mileage: {self.mileage}, Type: Public Transport"
class Car(Vehicle):
    def display_info(self):
        return f"Car Name: {self.name}, Speed: {self.max_speed}, Mileage: {self.mileage}, Type: Personal Vehicle"
school_bus = Bus("School Volvo", 180, 12)
family_car = Car("Toyota Corolla", 200, 15)
print(school_bus.display_info())
print(family_car.display_info())
